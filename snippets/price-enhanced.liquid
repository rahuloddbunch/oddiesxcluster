<style>
  .price-enhanced-wrapper {
    margin-top: 10px !important;
  }
  .price-enhanced-wrapper .price {
    text-align: left !important;
  }

  .price-enhanced-wrapper .price__container {
    margin-top: 0 !important;
    display: flex !important;
    align-items: center !important;
    gap: 8px !important;
    justify-content: flex-start !important;
  }

  .price-enhanced-wrapper .price__sale {
    display: flex !important;
    align-items: center !important;
    gap: 8px !important;
    justify-content: flex-start !important;
  }

  .price-enhanced-wrapper .price__regular {
    text-align: left !important;
  }

  .price-enhanced-wrapper .price-item--sale {
    font-size: 1.8rem !important;
    font-weight: bold !important;
    color: #000 !important;
  }

  .price-enhanced-wrapper .price-item--compare {
    font-size: 1.3rem !important;
    opacity: 0.6 !important;
  }

  .price-enhanced-wrapper .price-discount-badge {
    background-color: #007431 !important;
    color: white !important;
    padding: 4px 10px !important;
